<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.pizzalinequiz.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="introduction" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/question1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. First question" />

            <CheckBox
                android:id="@+id/checkBox1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question1" />

            <TextView
                android:id="@+id/answer1A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/checkBox1A"
                android:layout_below="@id/question1"
                android:layout_toRightOf="@id/checkBox1A"
                android:text="answer1A" />

            <CheckBox
                android:id="@+id/checkBox1B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/checkBox1A" />

            <TextView
                android:id="@+id/answer1B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/checkBox1B"
                android:layout_below="@id/question1"
                android:layout_toRightOf="@id/checkBox1B"
                android:text="answer1B" />

            <CheckBox
                android:id="@+id/checkBox1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/question1"
                android:layout_toEndOf="@id/answer1A" />

            <TextView
                android:id="@+id/answer1C"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/checkBox1C"
                android:layout_below="@id/question1"
                android:layout_toEndOf="@id/checkBox1C"
                android:text="answer1C" />

            <CheckBox
                android:id="@+id/checkBox1D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@id/checkBox1C"
                android:layout_below="@id/checkBox1A" />

            <TextView
                android:id="@+id/answer1D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/checkBox1B"
                android:layout_below="@id/checkBox1C"
                android:layout_toEndOf="@id/checkBox1D"
                android:text="answer1D" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorPrimaryDark" />

        <!-- Let's not forget the Submit button at the end-->
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit" />

    </LinearLayout>

</ScrollView>
